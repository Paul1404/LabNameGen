<Window x:Class="LabNameGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LabNameGen" Height="250" Width="450">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- IP Address Input -->
        <Label Content="IP Address:" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="IpTextBox" Grid.Row="0" Margin="150,0,0,10" Width="200" ToolTip="Enter the IP address (e.g., 192.168.0.1)"/>

        <!-- OS ComboBox -->
        <Label Content="Operating System:" Grid.Row="1" VerticalAlignment="Center"/>
        <ComboBox x:Name="OsComboBox" Grid.Row="1" Margin="150,0,0,10" Width="200" ToolTip="Select the operating system">
            <ComboBoxItem>RHEL</ComboBoxItem>
            <ComboBoxItem>Ubuntu</ComboBoxItem>
            <ComboBoxItem>Debian</ComboBoxItem>
            <ComboBoxItem>Windows Server Core</ComboBoxItem>
            <ComboBoxItem>Windows Server GUI</ComboBoxItem>
        </ComboBox>

        <!-- Hypervisor ComboBox -->
        <Label Content="Hypervisor:" Grid.Row="2" VerticalAlignment="Center"/>
        <ComboBox x:Name="HypervisorComboBox" Grid.Row="2" Margin="150,0,0,10" Width="200" ToolTip="Select the hypervisor">
            <ComboBoxItem>VMware</ComboBoxItem>
            <ComboBoxItem>Hyper-V</ComboBoxItem>
            <ComboBoxItem>Proxmox</ComboBoxItem>
        </ComboBox>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="3" Margin="0,10,0,0">
            <Button Content="Generate Hostname" Width="150" Click="GenerateHostname_Click" ToolTip="Generate the hostname"/>
            <Button Content="Copy" Width="100" Margin="10,0,0,0" Click="CopyHostname_Click" ToolTip="Copy the generated hostname to clipboard"/>
            <Button Content="Clear" Width="100" Margin="10,0,0,0" Click="ClearFields_Click" ToolTip="Clear all fields"/>
        </StackPanel>

        <!-- Result Display -->
        <TextBlock x:Name="ResultLabel" Grid.Row="4" TextWrapping="Wrap" Margin="0,10,0,0" FontSize="16" FontWeight="Bold" Foreground="DarkBlue"/>
    </Grid>
</Window>
